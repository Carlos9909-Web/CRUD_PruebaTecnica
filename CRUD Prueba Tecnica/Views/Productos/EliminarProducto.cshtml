@model ProductoModel
@{
    ViewData["Title"] = "EliminarProducto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Eliminar Contacto
    </div>
    <div class="card-body">


        <form asp-action="EliminarProducto" asp-controller="Productos" method="post">

            <input asp-for="IdProducto" type="hidden" class="form-control">

            <div class="alert alert-danger" role="alert">
                ¿Desea eliminar el contacto : @Html.DisplayTextFor(m => m.NombreProducto) ?
            </div>

            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="MostrarProductos" asp-controller="Productos" class="btn btn-warning">Volver a la lista</a>
        </form>


    </div>
</div>